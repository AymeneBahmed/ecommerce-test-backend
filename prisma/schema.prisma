generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:../src/lib/database.db"
}

model Product {
  id          String @id @default(uuid())
  img         String
  name        String
  description String
  quantity    Int
  price       Int
  // To keep things simple, we'll make category String instead of enum Category
  category    String
}
